<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_rv"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints">

          <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ImageView
        android:id="@+id/image_toolbar_rv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/foto_home1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
            android:id="@+id/text_toolbar_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_lonnar_"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_toolbar_rv"
            android:layout_marginStart="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/image_home"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/foto_home1"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_home"
        android:layout_marginTop="10dp"
        android:text="Manas University"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />
   <TextView
        android:id="@+id/text_home_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        android:layout_marginTop="5dp"
        android:text="00:00 00/00/00"
       android:textSize="12sp"
       android:textStyle="italic"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="16dp"
       />


</androidx.constraintlayout.widget.ConstraintLayout>