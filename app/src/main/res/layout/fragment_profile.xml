<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.profile.ProfileFragment">
    
    <TextView
        android:id="@+id/statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Смотреть проффесиональную панель"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="14dp"
        android:textColor="#2196F3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp"
        app:layout_constraintTop_toTopOf="@+id/statistic"
        android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile_foto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/text_profile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="54"
            app:layout_constraintStart_toEndOf="@+id/image_profile"
            android:layout_marginStart="70dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/text_profile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="212"
            app:layout_constraintStart_toEndOf="@+id/text_profile1"
            android:layout_marginStart="55dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/text_profile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="106"
            app:layout_constraintStart_toEndOf="@+id/text_profile2"
            android:layout_marginStart="50dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_profile_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            app:layout_constraintStart_toEndOf="@+id/image_profile"
            app:layout_constraintTop_toBottomOf="@+id/text_profile1"
            android:layout_marginStart="65dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/text_profile_tx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            app:layout_constraintStart_toEndOf="@+id/text_profile_tx1"
            app:layout_constraintTop_toBottomOf="@+id/text_profile2"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            /> <TextView
            android:id="@+id/text_profile_tx3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            app:layout_constraintStart_toEndOf="@+id/text_profile_tx2"
            app:layout_constraintTop_toBottomOf="@+id/text_profile2"
            android:layout_marginStart="26dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraint_profile"
        android:text="Пулатова Айназик"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        />
    <TextView
        android:id="@+id/text_profile_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_profile"
        android:text="Kyrgyzstan, Bishkek, Ak- Orgo"
        android:textStyle="italic"
        android:textColor="#192359"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"/>
    <Button
        android:id="@+id/button_profile_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#BFC1CF"
        android:text="Редактировать"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_profile_1"
        />

    <LinearLayout
        android:id="@+id/linear_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button_profile_0"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/button_profile"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:backgroundTint="#BFC1CF"
            android:text="Контакты"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/button_profile2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:backgroundTint="#BFC1CF"
            android:text="Email"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tablayout"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="@+id/linear_profile"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toBottomOf="?attr/actionBarSize"
        />





</androidx.constraintlayout.widget.ConstraintLayout>